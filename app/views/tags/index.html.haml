- content_for :title do
  Experience

#tags
  %table
    %thead.no-mobile
      %tr
        %th Name
        %th Jobs
        %th Projects
        %th Schools
        %th Certifications
    %tbody
      - @tags.each do |tag|
        %tr
          %td= link_to tag.name, tag_path(tag.slug)
          %td.no-mobile{ title: 'Jobs' }= graceful_none tag.occupations_count
          %td.no-mobile{ title: 'Projects' }= graceful_none tag.projects_count
          %td.no-mobile{ title: 'Schools' }= graceful_none tag.educations_count
          %td.no-mobile{ title: 'Certifications' }= graceful_none tag.certifications_count
