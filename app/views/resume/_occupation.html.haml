%table
  %tr
    %td
      = occupation.company
      = ", #{ occupation.city }" if occupation.city?
      = ", #{ occupation.state }" if occupation.state?
    %td.pull-right
      #{ occupation.start_date.strftime('%B %Y') } -
      - if occupation.end_date?
        = occupation.end_date.strftime('%B %Y')
      - else
        Present
%ul
  - occupation.details.each do |detail|
    %li= detail
